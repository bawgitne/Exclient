{
    "manifest_version": 3,
    "name": "FB Regis Cookie - Clean Architecture",
    "version": "1.0.0",
    "description": "Facebook extension with Clean Architecture implementation",
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "https://www.facebook.com/*",
        "http://localhost:8080/*"
    ],
    "background": {
        "service_worker": "src/presentation/service-worker/ServiceWorker.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*",
                "http://localhost:8080/*"
            ],
            "js": [
                "src/shared/config/AppConfig.js",
                "src/shared/utils/Utils.js",
                "src/infrastructure/services/DataProcessor.js",
                "src/infrastructure/services/DeviceManager.js",
                "src/infrastructure/services/StorageManager.js",
                "src/infrastructure/services/FacebookDataExtractor.js",
                "src/infrastructure/services/ContentExtractor.js",
                "src/application/services/FacebookSyncApp.js",
                "src/presentation/content-scripts/FacebookContentScript.js",
                "src/presentation/content-scripts/FacebookRepostInjector.js",
                "src/presentation/content-scripts/ContentScriptMain.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/**/*"
            ],
            "matches": [
                "https://www.facebook.com/*",
                "http://localhost:8080/*"
            ]
        }
    ]
}